<div class="col-xs-12 well">
  <div>
    <h2 class="show-header">Showing <%= "#{@exercise.user.full_name}'s Workout Details" %></h2>
  </div>
    <div class="col-xs-12 well member">
        <div class="col-xs-4">
            <strong>Duration (min):</strong>
        </div>
        <div class="col-xs-8 text-right">
            <%= @exercise.duration_in_min %>
        </div>
    </div>
    <div class="col-xs-12 col-md-12 well member">
        <div class="col-xs-12 col-sm-6">
          <strong>Exercise:</strong>
          </br>
          <ul>
            <% @exercise.movements.each do |movement| %>
            <ol>
              <%= movement.name %>
            </ol>
            <%end%>
          </ul>
          <strong>Weight:</strong>
          </br>
          <ul>
            <% @exercise.weights.each do |weight| %>
            <ol>
              <%= weight.kilogram %>
            </ol>
            <%end%>
          </ul>
        </div>
        <div class="col-xs-12 col-sm-6">
          <strong>Reps:</strong>
          </br>
          <ul>
            <% @exercise.reps.each do |rep| %>
            <ol>
              <%= rep.amount %>
            </ol>
            <%end%>
          </ul>
          <strong>Sets:</strong>
          </br>
          <ul>
            <% @exercise.zets.each do |zet| %>
            <ol>
              <%= zet.quantity %>
            </ol>
            <%end%>
          </ul>
        </div>
      </div>
    <div class="col-xs-12 well member">
        <div class="col-xs-4">
            <strong>Workout details:</strong>
        </div>
        <div class="col-xs-8 text-right">
            <%= truncate(@exercise.workout, length: 50) %>
        </div>
    </div>
    <div class="col-xs-12 well member">
        <div class="col-xs-4">
            <strong>Activity date:</strong>
        </div>
        <div class="col-xs-8 text-right">
            <%= @exercise.workout_date %>
        </div>
    </div>
    <div>
    <%= link_to "Back", user_exercises_path(current_user), class:"btn btn-lg btn-primary" %>
    </div>
    
</div>